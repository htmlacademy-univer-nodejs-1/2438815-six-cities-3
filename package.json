    "eslint": "8.49.0",
    "eslint-config-htmlacademy": "9.1.1",
    "json-server": "0.17.3",
    "pino-pretty": "^11.3.0",
    "rimraf": "5.0.1",
    "ts-node": "10.9.1",
    "tslib": "2.6.2",
    "typescript": "5.2.2"
  },
  "type": "module",
  "engines": {
    "node": "^18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "@typegoose/typegoose": "^12.9.0",
    "chalk": "^5.3.0",
    "convict": "^6.2.4",
